@using Microsoft.AspNetCore.Identity
@using ThesisDbApp.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav justify-content-end">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" class="btn btn nav-link btn-secondary" type="submit">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item me-2">
            <a id="register" class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a id="login" class="btn btn nav-link btn-secondary" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>